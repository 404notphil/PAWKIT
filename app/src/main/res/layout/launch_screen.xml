<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_top_bottom"
    tools:context=".LaunchScreenActivity">



    <TextView
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FingerPerc"
        android:fontFamily="@font/fingerperc_regular"
        android:textSize="56sp"
        android:textColor="@color/white"
        android:padding="30dp"
        android:alpha=".6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scrollView"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="310dp"
        app:layout_constraintTop_toBottomOf="@id/title_textview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bombo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bombo Legüero"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/fingerperc_regular"
                android:alpha=".6"/>

            <ImageView
                android:id="@+id/cajon_button"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/button_background"
                app:srcCompat="@mipmap/cajon_top_atrest_foreground"
                />

            <TextView
                android:id="@+id/cajon_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Cajón"
                android:textSize="20sp"
                android:fontFamily="@font/fingerperc_regular"
                android:alpha=".6"/>

            <ImageView
                android:id="@+id/bombo_button"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/button_background"
                app:srcCompat="@mipmap/head_png_foreground"
                android:alpha=".6"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>